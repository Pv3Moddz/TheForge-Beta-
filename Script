local AutoSellTab = Window:CreateTab("Auto Sell", 4483362458)
local function SellItem()
    if AutoSellMinerDropdown and AutoSellEssenceDropdown then
        local Itens = AutoSellMinerDropdown.CurrentOption
        for _, Item in ipairs(AutoSellEssenceDropdown.CurrentOption) do table.insert(Itens, Item) end
        local Inventory = game:GetService("ReplicatedStorage"):WaitForChild("Shared"):WaitForChild("Packages"):WaitForChild("Knit"):WaitForChild("Services"):WaitForChild("EnhanceService"):WaitForChild("RF"):WaitForChild("FindEquipmentByGUID"):InvokeServer().replica.Data.Inventory
        local ItenList = {}
        local Count = 0
        for Key, Value in pairs(Inventory) do
            if typeof(Value) == "table" then
                for _, Item in pairs(Value) do
                    if Item.Name and Item.Quantity and table.find(Itens, tostring(Item.Name)) then
                        ItenList[Item.Name] = Item.Quantity
                        Count += 1
                    end
                end
            else
                if table.find(Itens, tostring(Key)) then
                    ItenList[Key] = Value
                    Count += 1
                end
            end
        end
        if Count > 0 then
            game:GetService("ReplicatedStorage"):WaitForChild("Shared"):WaitForChild("Packages"):WaitForChild("Knit"):WaitForChild("Services"):WaitForChild("ProximityService"):WaitForChild("RF"):WaitForChild("ForceDialogue"):InvokeServer(workspace:WaitForChild("Proximity"):WaitForChild("Greedy Cey"), "SellConfirmMisc")
            game:GetService("ReplicatedStorage"):WaitForChild("Shared"):WaitForChild("Packages"):WaitForChild("Knit"):WaitForChild("Services"):WaitForChild("DialogueService"):WaitForChild("RF"):WaitForChild("RunCommand"):InvokeServer("SellConfirm", {Basket = ItenList})
            game:GetService("ReplicatedStorage"):WaitForChild("Shared"):WaitForChild("Packages"):WaitForChild("Knit"):WaitForChild("Services"):WaitForChild("StatusService"):WaitForChild("RF"):WaitForChild("GetPlayerEquipmentInfo"):InvokeServer()
            game:GetService("ReplicatedStorage"):WaitForChild("Shared"):WaitForChild("Packages"):WaitForChild("Knit"):WaitForChild("Services"):WaitForChild("DialogueService"):WaitForChild("RE"):WaitForChild("DialogueEvent"):FireServer("Closed")
        end
    end
end
AutoSellTab:CreateSection("Auto Sell")
AutoSellToggle = AutoSellTab:CreateToggle({
    Name = "Auto Sell",
    CurrentValue = false,
    Flag = "AutoSellMinerToggle",
    Callback = function(Value)
        AutoSellRunning = Value
        if AutoSellSlider then
            task.spawn(function()
                while AutoSellRunning do
                    task.wait(AutoSellSlider.CurrentValue)
                    SellItem()
                end
            end)
        end
    end,
})
AutoSellTab:CreateButton({
    Name = "Manual Sell",
    Callback = function()
        SellItem()
    end,
})
