    Icon = 0, -- Icon in Topbar. Can use Lucide Icons (string) or Roblox Image (number). 0 to use no icon (default).
    LoadingTitle = "Initializing...",
    LoadingSubtitle = "by ༗ Pv3Moddz </>",
    ShowText = "༗ Pv3Moddz </>", -- for mobile users to unhide rayfield, change if you'd like
    Theme = "Amethyst", -- Check https://docs.sirius.menu/rayfield/configuration/themes

    ToggleUIKeybind = "K",

    ConfigurationSaving = {
     Enabled = true,
     FileName = "Saves"
    },
})

local Tab = Window:CreateTab("Auto Farm", 4483362458)
local Section = Tab:CreateSection("Miner Farm")

local Button = Tab:CreateButton({
    Name = "Close Script",
    Callback = function()
        RayField.Destroy() -- The function that takes place when the button is pressed
    end,
})

Rayfield:SetVisibility(true)